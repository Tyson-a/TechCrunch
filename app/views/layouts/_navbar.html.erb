<!-- app/views/layouts/_navbar.html.erb -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <%= link_to 'TechCrunch', root_path, class: 'navbar-brand' %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <%= link_to 'About', about_path, class: 'nav-link' %>
        <%= link_to 'Contact', contact_path, class: 'nav-link' %>
        <%= link_to 'On Sale', products_path(filter: 'on_sale'), class: 'nav-link' %>
        <%= link_to 'New Products', products_path(filter: 'new'), class: 'nav-link' %>
        <%= link_to 'Products', products_path, class: 'nav-link' %>
      </ul>
      <ul class="navbar-nav ms-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <a class="nav-link" href="#"><%= current_user.email %></a>
          </li>
          <li class="nav-item">
            <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %>
          </li>
        <% end %>
        <li class="nav-item">
          <%= link_to cart_path, class: 'nav-link' do %>
            <i class="fas fa-shopping-cart"></i> Cart
            <% if current_cart.present? %>
              <span class="badge bg-secondary"><%= current_cart.cart_items.count %></span>
            <% else %>
              <span class="badge bg-secondary">0</span>
            <% end %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</nav>
