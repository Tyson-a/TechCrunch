<h2>Your Shopping Cart</h2>
<% if @cart.present? && @cart.cart_items.any? %>
  <% @cart.cart_items.each do |item| %>
    <div>
      <strong>Product:</strong> <%= item.product.name %>
      <%= form_with(model: item, local: true, method: :patch) do |form| %>
        <%= form.number_field :quantity, min: 1 %>
        <%= form.submit "Update Quantity" %>
      <% end %>
      <%= button_to "Remove Item", cart_item_path(item), method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
  <% end %>
  <%= link_to 'Checkout', new_order_path, class: "btn btn-primary" %>
<% else %>
  <p>Your cart is empty.</p>
<% end %>
