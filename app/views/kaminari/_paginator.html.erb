<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">
    <% if @products.prev_page %>
      <li class="page-item">
        <%= link_to 'Previous', products_path(page: @products.prev_page), class: 'page-link' %>
      </li>
    <% end %>
    <% @products.total_pages.times do |n| %>
      <li class="page-item <%= 'active' if n+1 == @products.current_page %>">
        <%= link_to n+1, products_path(page: n+1), class: 'page-link' %>
      </li>
    <% end %>
    <% if @products.next_page %>
      <li class="page-item">
        <%= link_to 'Next', products_path(page: @products.next_page), class: 'page-link' %>
      </li>
    <% end %>
  </ul>
</nav>
