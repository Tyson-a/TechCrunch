<!-- app/views/users/orders.html.erb -->
<h1>Order History</h1>

<% @orders.each do |order| %>
  <div class="order">
    <h2>Order ID: <%= order.id %> - <%= order.created_at.to_date %></h2>
    <ul>
      <% order.order_items.each do |item| %>
        <li><%= item.product.name %> - <%= item.quantity %> x $<%= item.unit_price %></li>
      <% end %>
    </ul>
    <p>Subtotal: <%= number_to_currency(order.total_before_tax) %></p>
<p>Taxes: <%= number_to_currency(order.tax_amount) %></p>
<p>Total: <%= number_to_currency(order.total_with_tax) %></p>
  </div>
<% end %>
